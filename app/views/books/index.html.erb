<div class="container">
  <div class = "row">

    <div class = "col-xs-6">
      <%= link_to image_tag("android.png", class: "robot img-responsive"), "/books/new", method: :post %>
    </div>
    <div class="col-xs-6">
      <% if @book != nil %>
        <div class="book">
          <%= image_tag @book['volumeInfo']['imageLinks']['thumbnail'], class: "img" %>
          <div>
            <h3><%= @book['volumeInfo']['title'] %></h3>
            <strong><%= @book['volumeInfo']['authors'][0] %></strong>

            <p><%= @book['volumeInfo']['description'] %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
